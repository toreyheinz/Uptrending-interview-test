<h1>Torey's Todo's</h1>

<%= simple_form_for @task do |f| %>
  <%= f.input :name, :label => 'Task' %>
  <%= f.submit 'Add Task' %>
<% end %>

<ul>
  <% @incomplete_tasks.each do |task| %>
    <li><%= task.name %> <%= button_to 'Done', mark_done_task_path(task) %></li>
  <% end %>
</ul>

<ul id="completed">
  <% @completed_tasks.each do |task| %>
    <li><%= task.name %></li>
  <% end %>
</ul>